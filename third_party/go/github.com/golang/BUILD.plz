package(default_visibility = ["PUBLIC"])

mock_download = remote_file(
    name = 'mockgen',
    _tag = 'download',
    url = f'https://github.com/golang/mock/releases/download/v1.4.3/mock_1.4.3_{CONFIG.HOSTOS}_{CONFIG.HOSTARCH}.tar.gz',
)


build_rule(
    name = "mockgen",
    binary = True,
    srcs = [mock_download],
    cmd = ' && '.join([
        'tar xf $SRCS',
        'cp $(find . -name mockgen) .'
    ]),
    outs = ['mockgen']
)


go_get(
    name = "mock",
    get = "github.com/golang/mock",
    install = [
        "mockgen/model",
        "gomock",
    ],
    repo = "github.com/golang/mock",
    revision = "v1.4.3",
    strip = [
        "ci",
        "sample",
    ],
    deps = [
        "//third_party/go/golang.org/x:tools",
    ],
)
